---
import { Icon } from "astro-icon/components"

type Props = {
  href: string
  target?: string
  "class:list"?: string[]
}

const { href, target = "" } = Astro.props
const classList = Astro.props["class:list"]
---

<a
  href={href}
  target={target}
  rel="noopener noreferrer"
  class:list={["transition-all group whitespace-nowrap", classList]}
>
  <slot name="icon" />
  <span
    class="font-semibold group-hover:text-yellow-700 dark:group-hover:text-yellow-400"
  >
    <slot />
  </span>
  <Icon
    name="iconamoon:arrow-top-right-1-bold"
    class="inline w-4 transition-all group-hover:-translate-y-0.5 group-hover:translate-x-0.5 -mt-0.5 h-5 group-hover:text-yellow-700 dark:group-hover:text-yellow-400"
  /><slot name="post-arrow" />
</a>
